<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".FragmentPages.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/ivNav"
                android:background="@drawable/navtab"
                android:layout_marginLeft="15dp"
                android:visibility="visible"/>
            <com.bokaro.utils.CustomTextViewBold
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Dashboard"
                android:textSize="17dp"
                android:drawablePadding="5dp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/ivLogo"
                android:background="@drawable/govtlogo"
                android:layout_marginRight="15dp"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="25dp"
                    android:orientation ="vertical"
                    android:id="@+id/llNewProject"
                    android:gravity="center"
                    android:background="@drawable/edit_ract_gray_design">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/new_project"
                        android:visibility="visible"/>
                    <com.bokaro.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="New Project"
                        android:textSize="15dp"
                        android:drawablePadding="5dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="25dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/llProjects"
                    android:background="@drawable/edit_ract_gray_design">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/project_list"
                        android:visibility="visible"/>
                    <com.bokaro.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Project List"
                        android:textSize="15dp"
                        android:drawablePadding="5dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="25dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/llGeotag"
                    android:background="@drawable/edit_ract_gray_design">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/geotag"
                        android:visibility="visible"/>
                    <com.bokaro.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Geo Tag"
                        android:textSize="15dp"
                        android:drawablePadding="5dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_ract_gray_design">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>