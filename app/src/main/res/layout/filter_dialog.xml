<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_Main"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/top_corner_design">

        <View
            android:layout_width="40dp"
            android:layout_height="3dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#E0E0E0"></View>

        <LinearLayout
            android:id="@+id/llDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.bokaro.utils.CustomTextViewBold
                android:id="@+id/tv_companion_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Filter"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llDate"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <com.bokaro.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Financial Year"
                android:textSize="14dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:id="@+id/etFinancialYear"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_ract_gray_design"
                android:layout_marginHorizontal="15dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:focusableInTouchMode="false"
                android:hint="Select Financial Year"/>

            <com.bokaro.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Block"
                android:textSize="14dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:id="@+id/etBlock"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_ract_gray_design"
                android:layout_marginHorizontal="15dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:focusableInTouchMode="false"
                android:hint="Select Block"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnApply"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_red_react_design"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Apply"
                    android:textAllCaps="false"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>